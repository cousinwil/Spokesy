  <article id="stats" class="container bg-blue fourth">
    <div class="row">
      <div class="twelvecol">
        <h1 class="white">Ride Statistics, Powered by Strava</h1>
      </div>
    </div>
    <div class="row">
      <div class="threecol">
        <h2 class="white">Club Totals</h2>
        <img src="/assets/stat-mileage.png" class="stat-icon">
        <h3 class="white">This Month</h3>
        <ol class="white">
          <% data = getData(Ride.where('date > ?', Date.today - 28)) %>
          <li>Total Miles <%= number_with_precision(data[0], :precision => 1) if data[0] %></li>
          <li>Commute Miles <%= number_with_precision(data[1], :precision => 1) if data[1] %></li>
          <li>Longest Ride <%= number_with_precision(data[2], :precision => 1) if data[2] %> <%= '(' + data[3].to_s + ')' if data[3] %></li>
        </ol>
        <h3 class="white">All Time</h3>
        <ol class="white">
          <% data = getData(Ride.all) %>
          <li>Total Miles - <%= number_with_precision(data[0], :precision => 1) if data[0] %></li>
          <li>Commute Miles - <%= number_with_precision(data[1], :precision => 1) if data[1] %></li>
          <li>Longest Ride - <%= number_with_precision(data[2], :precision => 1) if data[2] %></li><%= '(' + data[3].to_s + ')' if data[3] %>
        </ol>
      </div>
      <div class="threecol">
        <h2 class="white">Most Vertical</h2>
        <% past_year = (Date.today - 365).to_date %>
        <% past_month = (Date.today - 28).to_date %>
        <% ind_vert = Ride.highestVert(past_month) %>
        <img src="/assets/stat-vert.png" class="stat-icon">
        <h3 class="white">This Month</h3>
        <ol class="white">
          <li><%= ind_vert[3] %> - <%= number_with_precision(ind_vert[0], :precision => 0) %> feet</li>
          <li><%= ind_vert[4] %> - <%= number_with_precision(ind_vert[1], :precision => 0) %> feet</li>
          <li><%= ind_vert[5] %> - <%= number_with_precision(ind_vert[2], :precision => 0) %> feet</li>
        </ol>
        <% ind_vert = Ride.highestVert(past_year) %>
        <h3 class="white">All Time</h3>
        <ol class="white">
          <li><%= ind_vert[3] %> - <%= number_with_precision(ind_vert[0], :precision => 0) %> feet</li>
          <li><%= ind_vert[4] %> - <%= number_with_precision(ind_vert[1], :precision => 0) %> feet</li>
          <li><%= ind_vert[5] %> - <%= number_with_precision(ind_vert[2], :precision => 0) %> feet</li>
        </ol>
      </div>
      <div class="threecol">
        <h2 class="white">Most Points*</h2>
        <img src="/assets/stat-points.png" class="stat-icon">
        <h3 class="white">This Month</h3>
        <ol class="white">
          <% high_pts = Ride.highestPts(past_month) %>
          <li><%= high_pts[3] %> - <%= high_pts[0] %> Points</li>
          <li><%= high_pts[4] %> - <%= high_pts[1] %> Points</li>
          <li><%= high_pts[5] %> - <%= high_pts[2] %> Points</li>
        </ol>
        <h3 class="white">All Time</h3>
        <ol class="white">
          <% high_pts = Ride.highestPts(past_year) %>
          <li><%= high_pts[3] %> - <%= high_pts[0] %> Points</li>
          <li><%= high_pts[4] %> - <%= high_pts[1] %> Points</li>
          <li><%= high_pts[5] %> - <%= high_pts[2] %> Points</li>
        </ol> 
      </div>
      <div class="threecol last">
        <h2 class="white">Fastest</h2>
        <img src="/assets/stat-fastest.png" class="stat-icon">
        <h3 class="white">This Month</h3>
        <ol class="white">
          <% fastest = Ride.highestAveSpeed(past_month) %>
          <li><%= fastest[3] %> - <%= number_with_precision(fastest[0], :precision => 2) %>mph avg</li>
          <li><%= fastest[4] %> - <%= number_with_precision(fastest[1], :precision => 2) %>mph avg</li>
          <li><%= fastest[5] %> - <%= number_with_precision(fastest[2], :precision => 2) %>mph avg</li>
        </ol>
        <h3 class="white">All Time</h3>
        <ol class="white">
          <% fastest = Ride.highestAveSpeed(past_year) %>
          <li><%= fastest[3] %> - <%= number_with_precision(fastest[0], :precision => 2) %>mph avg</li>
          <li><%= fastest[4] %> - <%= number_with_precision(fastest[1], :precision => 2) %>mph avg</li>
          <li><%= fastest[5] %> - <%= number_with_precision(fastest[2], :precision => 2) %>mph avg</li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="sixcol">&nbsp;</div>
      <div class="sixcol last">
        <p class="white footnote"><strong>*Points: 1 Mile or 100 Vertical feet per point</strong></p>
      </div>
    </div>
    </div>
    <div class="row">
    </div>
  </article>